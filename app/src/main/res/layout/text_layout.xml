<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/background"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/holder_height"
        android:padding="10dp"
        android:background="@color/backgroundRed">

        <ImageButton
            android:id="@+id/button_plus_down"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:background="@color/backgroundRed"
            android:src="@mipmap/add_extra"
            android:layout_width="@dimen/icones_size"
            android:layout_height="@dimen/icones_size" />
        <ImageButton
            android:id="@+id/button_edit"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:background="@color/backgroundRed"
            android:src="@mipmap/edit"
            android:layout_width="@dimen/icones_size"
            android:layout_height="@dimen/icones_size" />
        <ImageButton
            android:id="@+id/button_plus_up"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:background="@color/backgroundRed"
            android:src="@mipmap/right_arrow"
            android:layout_width="@dimen/icones_size"
            android:layout_height="@dimen/icones_size" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/resume"
            android:layout_width="match_parent"
            android:layout_height="@dimen/holder_height"
            android:drawablePadding="@dimen/text_padding"
            android:drawableEnd="@mipmap/empty"
            android:background="@color/backgroundLight"
            />
        <TextView
            android:id="@+id/long_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/text_padding"
            android:background="@color/backgroundLight"
            android:visibility="gone"
            />
    </LinearLayout>
</FrameLayout>