<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/background"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/holder_height"
        android:dividerPadding="5dp"
        android:background="@color/backgroundRed">

        <ImageButton
            android:id="@+id/button_add_up"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:background="@color/backgroundRed"
            android:src="@mipmap/add_up"
            android:layout_width="@dimen/icones_size"
            android:layout_height="@dimen/icones_size" />
        <ImageButton
            android:id="@+id/button_add_down"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:background="@color/backgroundRed"
            android:src="@mipmap/add_down"
            android:layout_width="@dimen/icones_size"
            android:layout_height="@dimen/icones_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider"
        android:showDividers="middle"
        >

        <TextView
            android:id="@+id/resume"
            android:layout_width="match_parent"
            android:layout_height="@dimen/holder_height"
            android:paddingStart="@dimen/default_margin"
            android:drawablePadding="0dp"
            android:ems="20"
            android:background="@color/backgroundLight"
            />

        <TextView
            android:id="@+id/long_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/holder_height"
            android:paddingStart="@dimen/default_margin"
            android:paddingEnd="@dimen/default_margin"
            android:ems="20"
            android:background="@color/backgroundLight"
            android:visibility="gone"
            />
    </LinearLayout>
</FrameLayout>